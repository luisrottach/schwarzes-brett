<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "Schwarzes Brett" }}</title>
    <link rel="stylesheet" href="/styles.css" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-64NCPMBWLM"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-64NCPMBWLM');
    </script>

    <!-- PDF-Klicks tracken -->
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('a[href$=".pdf"]').forEach(link => {
          link.addEventListener("click", function() {
            gtag('event', 'pdf_download', {
              'event_category': 'Dateien',
              'event_label': link.href
            });
          });
        });
      });
    </script>

    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user) => {
          const h = window.location.hash || "";
          // Invite-Link erkannt? Dann Signup-Dialog Ã¶ffnen
          if (!user && (h.includes("invite") || h.includes("invite_token"))) {
            window.netlifyIdentity.open("signup");
          }
        });
      }
    </script>
  </head>
  <body>
    <header class="container">
      <h1>Schwarzes Brett</h1>
    </header>
    <main class="container">
      {{ content | safe }}
    </main>
    <footer class="container small">
      <p>Powered by Netlify + Decap CMS + Eleventy</p>
    </footer>
  </body>
</html>
